<h1>Login</h1>

<%= form_tag url: sessions_path do %>
  <div id="new-session-form">
    <%= render 'layouts/flash_notice' %>

    <div id="exist_email">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div id="exist_password">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div id="login_button">
      <%= button_tag :login %>
    </div>
    <%= link_to 'Forgot your password?', reset_password_path %>
  </div>
<% end %>