<h1>All My Wines</h1>

<% user_wines.each do |wine| %>
  <div id="each_wine">
    <div id="placeholder">
      <%= image_tag wine.wine_image_url(:thumb).to_s %>
    </div>
    <%= wine.wine_vintage %>
    <%= wine.wine_type %>
    <div id="wine_name">
      <%= wine.wine_name %>
    </div>
    <div id="overall_rating">
      Overall Rating:
      <%= wine.wine_overall_rating %>
    </div>
    <div id="edit_link">
      <a href="/users/<%= session[:id] %>/collections/<%= Wine.find(wine.id).collection_id %>/wines/<%= wine.id %>/edit">Edit
        this <%= wine.wine_type %></a>
    </div>
    <div id="delete_link">
      <a data-method="delete" href="/users/<%= session[:id] %>/collections/<%= Wine.find(wine.id).collection_id %>/wines/<%= wine.id %>">Delete
        this <%= wine.wine_type %></a>
    </div>
  </div>
<% end %>